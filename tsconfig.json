{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist/node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["./src/app"],
  "exclude": ["tests", "dist", "node_modules"],
  "ts-node": {
    "files": true
  }
}
